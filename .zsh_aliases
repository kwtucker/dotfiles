
# -------------------------------------------------------------------
# Alias 
# -------------------------------------------------------------------

# for the better man pages
alias mana="tldr"
alias up="cd .. && ls -la |  awk '{print \$9,\$10}'"
alias c='clear'
alias zshrc="vim ~/dotfiles/.zshrc"

# ---- GO ----
alias gohome="cd ~/go/src/github.com/kwtucker/ && tree -L 1"
alias gowork="cd ~/go/src/bitbucket.org/cts-rmm/rmm && tree -L 1"
alias gowui="cd ~/go/src/bitbucket.org/cts-rmm/rmm/rmmui && tree -L 1 && go build && ./rmmui"


# ---- PHP ----
alias composer="php /usr/local/bin/composer.phar"


# ---- dotfile git push ----
alias dotpush='pwd=`pwd` && cd ~/dotfiles && gaa && sleep 2 &&  gcmsg "update dotfiles" && sleep 2 && git push origin master && sleep 6 && cd $pwd'


# ---- dotfile git pull ----
alias dotpull='pwd=`pwd` && cd ~/dotfiles && git pull && sleep 6 && cd $pwd'


# ---- dotfile cd ----
alias dot='cd ~/dotfiles'

