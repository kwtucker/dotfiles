
# -------------------------------------------------------------------
# Alias 
# -------------------------------------------------------------------

# for the better man pages
alias m="tldr"

alias up="cd .. && ls -la |  awk '{print \$9,\$10}'"
alias c='clear'
alias v='vim'
alias zshrc="vim ~/dotfiles/.zshrc"
alias kc='kubectl'
alias goland='/usr/local/bin/goland'
# ---- GO ----
alias gohome="cd ~/go/src/github.com/kwtucker/ && tree -L 1"
alias gowork="cd ~/go/src/github.comcast.com/lrm && tree -L 1"
alias gowui="cd ~/go/src/github.comcast.com/lrm/ui && go build && ./ui"


# ---- PHP ----
alias composer="php /usr/local/bin/composer.phar"


# ---- dotfile git push ----
alias dotpush='pwd=`pwd` && cd ~/dotfiles && gaa && sleep 2 &&  gcmsg "update dotfiles" && sleep 2 && git push origin master && sleep 6 && cd $pwd'


# ---- dotfile git pull ----
alias dotpull='pwd=`pwd` && cd ~/dotfiles && git pull && sleep 6 && cd $pwd'


# ---- dotfile cd ----
alias dot='cd ~/dotfiles'

alias docker_rm_all="docker rm \`docker ps -a -q\`"
alias docker_rmi_all="docker rmi \`docker images -q\`"
alias docker_rmi_dangling="docker rmi \`docker images -qa -f 'dangling=true'\`"
