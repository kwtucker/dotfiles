[include]
  path = config.local

[user]
  useConfigOnly = true

[apply]
  whitespace = fix

[core]
  abbrev = 12
  attributesfile = ~/.gitattributes
  excludesfile = ~/.gitignore
  ignorecase = false

[color]
  branch = auto
  diff = auto
  grep = auto
  showbranch = auto
  status = auto
  ui = auto

[alias]
	pt = !git tag -l | xargs git tag -d && git fetch -t
	sort = !git tag -l | sort -V