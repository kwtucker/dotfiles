[include]
	path = ~/.config/git/config.local
[core]
	excludesFile = ~/.config/git/ignore

[init]
  defaultBranch = main

[alias]
  br = branch
  ci = commit
  cm = !git add -A && git commit -m
  co = checkout
  cb = !git checkout $(git branch | fzf)
	pt = !git tag -l | xargs git tag -d && git fetch -t
	sort = !git tag -l | sort -V
  st = status -sb
  wip = commit -am "WIP"

[fetch]
  prune = true
  pruneTags = true	

[pull]
  rebase = true
  tags = true

[push]
  default = nothing

[merge]
	tool = vscode

[mergetool "vscode"]
	cmd = "code --wait"

[url "git://"]
	insteadOf = https://
